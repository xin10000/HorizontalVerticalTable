<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f0f0f0" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="360px"
        android:layout_height="100px"

        android:background="#FFEFE4E7"
        android:gravity="center"
        android:text="商品名称"
        android:textColor="#414141"
        android:textSize="32px" />

    <com.lunger.bidirtabledemo.view.NoScrollHorizontalScrollView
        android:id="@+id/sv_title"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_toRightOf="@id/tv_name"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_Title"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="200px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="商品条码"
                android:textSize="32px"
                android:visibility="gone" />


        </LinearLayout>
    </com.lunger.bidirtabledemo.view.NoScrollHorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="50px"
        android:background="#f0f0f0" />

    <LinearLayout
        android:id="@+id/myLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_name"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lv_goods_name"

            android:layout_width="360px"
            android:layout_height="match_parent"

            android:scrollbars="none" />
        <!--android:layout_below="@id/tv_name"-->
        <com.lunger.bidirtabledemo.view.LinkedHorizontalScrollView
            android:id="@+id/sv_good_detail"
            android:layout_width="1500px"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/lv_goods_name"
            android:scrollbars="none">

            <ListView
                android:id="@+id/lv_good_info"
                android:layout_width="1500px"
                android:layout_height="match_parent" />
        </com.lunger.bidirtabledemo.view.LinkedHorizontalScrollView>

    </LinearLayout>
</RelativeLayout>
